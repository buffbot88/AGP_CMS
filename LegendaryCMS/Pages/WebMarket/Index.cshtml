@page
@model LegendaryCMS.Pages.WebMarket.IndexModel
@{
    ViewData["Title"] = "Web Hosting Packages";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h1 class="display-4">Welcome to AGP CMS Web Market</h1>
            <p class="lead">Choose the perfect hosting package for your needs</p>
        </div>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.HasExistingAccount)
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">You already have an account!</h4>
            <p>You already have a web hosting account with us.</p>
            <hr>
            <p class="mb-0">
                <a href="/WebMarket/Dashboard" class="btn btn-primary">Go to Dashboard</a>
            </p>
        </div>
    }

    <div class="row">
        @foreach (var package in Model.Packages)
        {
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm @(package.Name == "Full Suite" ? "border-primary" : "")">
                    @if (package.Name == "Full Suite")
                    {
                        <div class="card-header bg-primary text-white text-center">
                            <strong>Most Popular</strong>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title text-center">@package.Name</h3>
                        <h4 class="text-center text-primary mb-3">
                            $@package.Price.ToString("0.00")<small class="text-muted">/month</small>
                        </h4>
                        <p class="card-text">@package.Description</p>
                        
                        <h6 class="mt-3">Features:</h6>
                        <ul class="list-unstyled">
                            @foreach (var feature in package.Features)
                            {
                                <li><i class="bi bi-check-circle-fill text-success"></i> @GetFeatureDisplayName(feature)</li>
                            }
                        </ul>

                        <div class="mt-auto">
                            @if (!Model.HasExistingAccount)
                            {
                                <a href="/WebMarket/Register?packageId=@package.Id" class="btn @(package.Name == "Full Suite" ? "btn-primary" : "btn-outline-primary") w-100">
                                    Get Started
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>Already Registered</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <h2 class="text-center mb-4">What You Get</h2>
        </div>
        <div class="col-md-4 text-center mb-3">
            <div class="feature-icon">
                <i class="bi bi-hdd-network display-4 text-primary"></i>
            </div>
            <h4>FTP Access</h4>
            <p>Full FTP access to upload and manage your files with your favorite FTP client.</p>
        </div>
        <div class="col-md-4 text-center mb-3">
            <div class="feature-icon">
                <i class="bi bi-globe display-4 text-primary"></i>
            </div>
            <h4>Custom URL</h4>
            <p>Your site will be accessible at http://agpstudios.org/your-site-name</p>
        </div>
        <div class="col-md-4 text-center mb-3">
            <div class="feature-icon">
                <i class="bi bi-shield-check display-4 text-primary"></i>
            </div>
            <h4>Secure & Reliable</h4>
            <p>Your files are stored securely with automatic backups and 99.9% uptime.</p>
        </div>
    </div>

    <div class="row mt-5 mb-5">
        <div class="col-md-12 text-center">
            <h3>Need Help Choosing?</h3>
            <p class="lead">Contact our support team and we'll help you find the perfect package.</p>
            @if (!Model.IsAuthenticated)
            {
                <a href="/Register" class="btn btn-lg btn-success">Create Account to Get Started</a>
            }
        </div>
    </div>
</div>

@functions {
    private string GetFeatureDisplayName(string feature)
    {
        return feature switch
        {
            "forum" => "Discussion Forums",
            "blog" => "Blog System",
            "website" => "Website Hosting",
            "downloads" => "File Downloads",
            _ => feature
        };
    }
}

<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .feature-icon {
        margin-bottom: 1rem;
    }
</style>
