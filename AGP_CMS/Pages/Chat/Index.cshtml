@page "/cms/chat"
@model AGP_CMS.Pages.Chat.IndexModel
@{
    ViewData["Title"] = "Chat Rooms";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a0033 50%, #2d004d 100%);
            min-height: 100vh;
            color: #e0d0ff;
        }
        .header {
            background: rgba(20, 0, 40, 0.9);
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
            padding: 30px 20px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(138, 43, 226, 0.3);
        }
        .header h1 {
            background: linear-gradient(to right, #ffffff, #c084fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 3em;
            margin-bottom: 10px;
        }
        .nav {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }
        .nav a {
            color: #c084fc;
            text-decoration: none;
            padding: 10px 20px;
            background: rgba(138, 43, 226, 0.2);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 8px;
            transition: all 0.3s;
            font-weight: 600;
        }
        .nav a:hover {
            background: rgba(138, 43, 226, 0.4);
            transform: translateY(-2px);
        }
        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }
        .welcome-section {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(138, 43, 226, 0.4);
        }
        .welcome-section h2 {
            color: #c084fc;
            margin-bottom: 15px;
        }
        .rooms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }
        .room-card {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 12px;
            padding: 25px;
            transition: all 0.3s;
            cursor: pointer;
        }
        .room-card:hover {
            border-color: rgba(138, 43, 226, 0.6);
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(138, 43, 226, 0.4);
        }
        .room-card h3 {
            color: #c084fc;
            margin-bottom: 10px;
            font-size: 1.4em;
        }
        .room-card p {
            color: #c8b6ff;
            margin-bottom: 15px;
            line-height: 1.6;
        }
        .room-meta {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            margin-top: 15px;
        }
        .room-meta span {
            background: rgba(138, 43, 226, 0.2);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.9em;
            color: #c8b6ff;
        }
        .btn-primary {
            background: linear-gradient(135deg, #8b2fc7 0%, #6a1b9a 100%);
            border: 2px solid rgba(138, 43, 226, 0.5);
            color: white;
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-block;
            margin-top: 15px;
            transition: all 0.3s;
            cursor: pointer;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #a13dd6 0%, #7d22ab 100%);
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.6);
            transform: translateY(-2px);
        }
        .loading {
            text-align: center;
            padding: 40px;
            color: #c8b6ff;
        }
        .create-room-section {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
        }
        .create-room-section h3 {
            color: #c084fc;
            margin-bottom: 15px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            color: #c8b6ff;
            margin-bottom: 5px;
        }
        .form-group input {
            width: 100%;
            padding: 10px;
            background: rgba(138, 43, 226, 0.1);
            border: 1px solid rgba(138, 43, 226, 0.3);
            border-radius: 5px;
            color: #e0d0ff;
            font-size: 1em;
        }
        .form-group input:focus {
            outline: none;
            border-color: rgba(138, 43, 226, 0.6);
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üí¨ Chat Rooms</h1>
        <p>Connect and communicate with other users</p>
        <div class="nav">
            <a href="/">üè† Home</a>
            <a href="/cms/blogs">üìù Blogs</a>
            <a href="/cms/forums">üí¨ Forums</a>
            <a href="/control-panel">‚öôÔ∏è Control Panel</a>
        </div>
    </div>

    <div class="container">
        <div class="create-room-section">
            <h3>‚ûï Create New Room</h3>
            <div class="form-group">
                <label for="roomName">Room Name:</label>
                <input type="text" id="roomName" placeholder="Enter room name...">
            </div>
            <button class="btn-primary" onclick="createRoom()">Create Room</button>
        </div>

        <div class="welcome-section">
            <h2>üí¨ Welcome to Chat</h2>
            <p>
                Join chat rooms to connect with other users in real-time. Create your own rooms or join existing ones
                to participate in conversations.
            </p>
        </div>

        <h2 style="color: #c084fc; margin-bottom: 20px;">üìã Available Rooms</h2>
        <div id="rooms-container" class="rooms-grid">
            <div class="loading">Loading chat rooms...</div>
        </div>
    </div>

    <script>
        async function loadRooms() {
            try {
                const response = await fetch('/api/chat/rooms');
                const data = await response.json();
                
                const container = document.getElementById('rooms-container');
                
                if (data.success && data.data && data.data.length > 0) {
                    container.innerHTML = data.data.map(room => `
                        <div class="room-card" onclick="joinRoom('${room.id}', '${room.name}')">
                            <h3>${room.name}</h3>
                            <p>Created by ${room.createdBy}</p>
                            <div class="room-meta">
                                <span>üí¨ ${room.messageCount} messages</span>
                                <span>üë• ${room.activeUserCount} users</span>
                            </div>
                            <button class="btn-primary" style="margin-top: 10px;">Join Room</button>
                        </div>
                    `).join('');
                } else {
                    container.innerHTML = `
                        <div class="welcome-section">
                            <h3>No rooms available yet</h3>
                            <p>Create the first room to start chatting!</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading rooms:', error);
                document.getElementById('rooms-container').innerHTML = `
                    <div class="welcome-section">
                        <h3>‚ö†Ô∏è Error loading rooms</h3>
                        <p>Please try again later or contact support.</p>
                    </div>
                `;
            }
        }

        async function createRoom() {
            const roomName = document.getElementById('roomName').value.trim();
            if (!roomName) {
                alert('Please enter a room name');
                return;
            }

            try {
                const response = await fetch('/api/chat/rooms', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        name: roomName,
                        createdBy: 'user',
                        isPrivate: false
                    })
                });

                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('roomName').value = '';
                    loadRooms(); // Refresh the rooms list
                    alert('Room created successfully!');
                } else {
                    alert('Failed to create room: ' + data.message);
                }
            } catch (error) {
                console.error('Error creating room:', error);
                alert('Error creating room. Please try again.');
            }
        }

        function joinRoom(roomId, roomName) {
            window.location.href = `/cms/chat/room?id=${roomId}&name=${encodeURIComponent(roomName)}`;
        }

        // Load rooms on page load
        loadRooms();
    </script>
    <!-- ASHAT Os Session Manager -->
    <script src="/js/session-manager.js"></script>
</body>
</html>
