@page "/cms/admin/downloads/upload"
@model AGP_CMS.Pages.Admin.UploadDownloadModel
@{
    ViewData["Title"] = "Upload Download";
}

<style>
    .admin-container {
        max-width: 1000px;
        margin: 20px auto;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }
    
    .page-header {
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
        color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    .breadcrumb {
        margin-bottom: 20px;
        color: #666;
    }
    
    .breadcrumb a {
        color: #667eea;
        text-decoration: none;
    }
    
    .panel {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }
    
    .panel h2 {
        margin: 0 0 20px 0;
        color: #333;
        border-bottom: 2px solid #06b6d4;
        padding-bottom: 10px;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #333;
    }
    
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        font-size: 1em;
    }
    
    .form-control:focus {
        outline: none;
        border-color: #06b6d4;
    }
    
    textarea.form-control {
        min-height: 150px;
        resize: vertical;
    }
    
    .btn {
        padding: 10px 20px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }
    
    .btn-primary {
        background: #06b6d4;
        color: white;
    }
    
    .btn-primary:hover {
        background: #0891b2;
    }
    
    .btn-secondary {
        background: #6b7280;
        color: white;
    }
    
    .btn-secondary:hover {
        background: #4b5563;
    }
    
    .alert {
        padding: 15px;
        border-radius: 6px;
        margin-bottom: 20px;
    }
    
    .alert-success {
        background: #d1fae5;
        color: #065f46;
        border: 1px solid #a7f3d0;
    }
    
    .alert-error {
        background: #fee2e2;
        color: #991b1b;
        border: 1px solid #fecaca;
    }
    
    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        flex-wrap: wrap;
    }
</style>

<div class="admin-container">
    <div class="breadcrumb">
        <a href="/cms/admin">Admin</a> / <a href="/cms/admin/downloads">Download Management</a> / Upload
    </div>
    
    <div class="page-header">
        <h1>ðŸ“¤ Upload Download</h1>
        <p>Upload a new file for users to download</p>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error">
            âœ— @Model.ErrorMessage
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            âœ“ @Model.SuccessMessage
        </div>
    }
    
    <div class="panel">
        <h2>File Details</h2>
        
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="File">File *</label>
                <input type="file" id="File" asp-for="File" class="form-control" required />
            </div>
            
            <div class="form-group">
                <label for="FileName">File Name (optional)</label>
                <input type="text" id="FileName" asp-for="FileName" class="form-control" 
                       placeholder="Leave blank to use original filename" />
            </div>
            
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea id="Description" asp-for="Description" class="form-control" 
                          placeholder="Enter a description for this download..."></textarea>
            </div>
            
            <div class="button-group">
                <button type="submit" class="btn btn-primary">Upload File</button>
                <a href="/cms/admin/downloads" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
